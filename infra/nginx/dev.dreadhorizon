server {
    server_name dev.dreadhorizon.com;

    # Proxy Frontend (Live Dev - Port 5173)
    location / {
        proxy_pass http://localhost:5173;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    # Proxy Backend API (via Frontend Proxy or Direct? Frontend Proxy handles it)
    # Since Vite dev server at 5173 proxies /api to 3001, we just send everything to 5173.
    # Vite will handle the routing to backend.


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dreadhorizon.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dreadhorizon.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = dev.dreadhorizon.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name dev.dreadhorizon.com;
    listen 80;
    return 404; # managed by Certbot


}